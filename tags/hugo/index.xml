 border: none;
 font-size: 20px;
 cursor: pointer;
 color: #6b7280;
 line-height: 1;
 padding: 2px;
 width: 24px;
 height: 24px;
 display: flex;
 align-items: center;
 justify-content: center;
 border-radius: 4px;
 flex-shrink: 0;
 transition: all 0.15s;
 }

 .preview-close:hover {
