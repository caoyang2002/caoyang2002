 display: -webkit-box;
 -webkit-line-clamp: 4;
 -webkit-box-orient: vertical;
 }

 .preview-description:empty {
 display: none;
 }

 .preview-url {
 padding: 0 14px 10px;
 font-size: 12px;
 color: #9ca3af;
 white-space: nowrap;
 overflow: hidden;
 text-overflow: ellipsis;
 }

 .preview-footer {
 padding: 10px 14px;
 background: #f9fafb;
 border-top: 1px solid #e5e7eb;
 }

 .preview-link {
 display: inline-block;
 color: #3b82f6;
 text-decoration: none;
 font-size: 13px;
 font-weight: 500;
 transition: color 0.15s;
 }

 .preview-link:hover {
