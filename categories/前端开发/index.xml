 });
}

// 更新用户状态
function toggleUserStatus(status) {
 if(status === &amp;#39;active&amp;#39;) {
 $(&amp;#39;#userStatus&amp;#39;).addClass(&amp;#39;active&amp;#39;).removeClass(&amp;#39;inactive&amp;#39;);
